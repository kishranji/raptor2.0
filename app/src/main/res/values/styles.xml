<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sub_title_text">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="desc_text">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="light_desc">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="OtpWidget" />


    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_22</item>
    </style>

</resources>
